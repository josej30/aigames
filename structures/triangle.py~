class Triangle:
	vertex1 = ()
	vertex2 = ()
	vertex3 = ()

	def __init__(self,a,b,c):
		self.vertex1 = a
    		self.vertex2 = b
    		self.vertex3 = c
    	def centerOfMass(self):
		G = [0,0]
    		G[0] = (self.vertex1[0] + self.vertex2[0] + self.vertex3[0])/3.0
    		G[1] = (self.vertex1[1] + self.vertex2[1] + self.vertex3[1])/3.0
    		return G

